# DocPilot Backend Environment Configuration
# Copy this file to .env and fill in your values

# Application Settings
APP_NAME=DocPilot
DEBUG=true

# Pinecone Configuration
# Sign up at https://www.pinecone.io/ for a free API key
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=us-east-1
PINECONE_INDEX_NAME=docpilot
PINECONE_DIMENSION=1024

# Groq LLM Configuration (API-based text generation)
# Sign up at https://console.groq.com/ for a free API key
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama-3.1-8b-instant
GROQ_BASE_URL=https://api.groq.com/openai/v1

# Pinecone Embedding Model (hosted - no local setup required)
# Embeddings are generated via Pinecone Inference API
PINECONE_EMBEDDING_MODEL=llama-text-embed-v2

# Section Processing Configuration
SECTION_SMALL_THRESHOLD=400
CHUNK_MAX_TOKENS=512
MAX_SECTIONS_PER_PAGE=30

# Retrieval Configuration
TOP_K_RETRIEVAL=5
SIMILARITY_THRESHOLD=0.7

# Streaming Configuration
STREAM_DELAY_MS=10
